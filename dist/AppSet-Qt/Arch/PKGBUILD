# Maintainer: Simone Tobia <simone.tobia at gmail dot com>

pkgname=appset-qt
pkgver=0.1.3
pkgrel=1
pkgdesc="An advanced, distribution independent, SIMPLE and not hungry for dependencies package manager"
arch=('i686' 'x86_64')
url="http://appset.sourceforge.net/"
license=('GPL2')
depends=('qt>=4.6')
install=${pkgname}.install
source=(http://sourceforge.net/projects/appset/files/$pkgname/$pkgver/$pkgname-$pkgver-sources.tar.gz/download)
md5sums=(06ad19195f79c306ba46dfc36203ea46)

build() {
  cd $srcdir/$pkgname-$pkgver-sources
  qmake PREFIX=/usr
  make || return 1
  make INSTALL_ROOT="$pkgdir/" install
}
